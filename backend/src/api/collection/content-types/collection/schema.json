      "required": true,
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ]
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "isFeatured": {
      "type": "boolean",
      "default": false,
      "required": true
    }
  }
}
